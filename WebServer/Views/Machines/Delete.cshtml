@model DataApiService.Models.Machine

@{
    ViewData["Title"] = "Delete";
}

<div>
    <span style="margin-top: 30px;" class="catalog__label">Удаление автомата</span>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Наименование
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Machine_name)
        </dd>
        <dt class="col-sm-2">
            Адрес
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Machine_address)
        </dd>
        <dt class="col-sm-2">
            Модель
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Machine_model)
        </dd>
        <dt class="col-sm-2">
            ID Терминала
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Terminal_id)
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.Machine_id">
        <button type="submit" value="Delete" class="btn btn-danger">Удалить</button>
        <button asp-action="Index" asp-controller="Machines" class="btn gray">Отмена</button>
    </form>
</div>
