@model DataApiService.Models.Machine

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Machine</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Machine_name" class="control-label">Наименование</label>
                <input asp-for="Machine_name" class="form-control" />
                <span asp-validation-for="Machine_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Machine_address" class="control-label">Адрес</label>
                <input asp-for="Machine_address" class="form-control" />
                <span asp-validation-for="Machine_address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model_id" class="control-label">Модель</label>
                <select asp-for="Model_id" asp-items="ViewBag.machineModels" style="width: 100%;height: 50px; margin: 20px;">
                    <option selected="selected"></option>
                </select>
                <span asp-validation-for="Model_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Terminal_id" class="control-label"></label>
                <select asp-for="Terminal_id" asp-items="ViewBag.terminalIds" style="width: 100%;height: 50px; margin: 20px;">
                    <option selected="selected"></option>
                </select>
                <span asp-validation-for="Terminal_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
